<%= render 'friends/lookup' %>

<% if @friendships.size > 0 %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th colspan="3"> My friends </th>
            </tr>
            <tr> 
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% @friendships.each do |friend| %>
                <tr>
                    <td><%= friend.full_name %></td>
                    <td><%= friend.email %> </td>
                    <td>
                        <%= link_to 'View Profile' , user_path(friend) , 
                                                    class: "btn btn-xs btn-primary" %>
                        
                        <%= link_to 'Remove Friend' , friendship_path(friend) , method: :delete , 
                                                    class: "btn btn-xs btn-danger" , data: {confirm: "Are you Sure?"}%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <div class="row col-lg-12"> <p> You don't have any friends please add some </p> </div>
<% end %>