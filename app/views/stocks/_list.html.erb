<table class="table table-striped">
    <thead>
        <th>Name</th>
        <th>Symbol</th>
        <th>Current Price</th>
        <% if (@user.id == current_user.id) %>
            <th>Action</th>
        <% end %>
    </thead>
    <tbody>
        <% @user_stocks.each do |user_stock| %>
            <tr>
                <td><%= user_stock.name %></td>
                <td><%= user_stock.ticker %> </td>
                <td><%= user_stock.last_price %>  || <%= @user.id %> || <%= current_user.id %> </td>
                <% if (@user.id = current_user.id) %>
                    <td><%= link_to 'Delete this stock' , user_stock_path(user_stock) , method: :delete , 
                                                class: "btn btn-xs btn-danger" , data: {confirm: "Are you Sure?"}%></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>